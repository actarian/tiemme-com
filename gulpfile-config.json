{
	"targets": {
		"browser": {
			"compile": [{
				"input": "src/css/main.scss",
				"output": "docs/css/main.css",
				"minify": true
			}, {
				"input": "src/js/main.js",
				"output": "docs/js/main.js",
				"rollup": {
					"output": {
						"format": "umd",
						"globals": {
							"rxjs": "rxjs",
							"rxjs/operators": "rxjs.operators",
							"rxcomp": "rxcomp"
						},
						"external": ["rxjs", "rxcomp"]
					}
				},
				"minify": true
			}, {
				"input": "src/js/image/image.service.worker.js",
				"output": "docs/js/workers/image.service.worker.js",
				"rollup": {
					"output": {
						"format": "umd"
					}
				},
				"minify": true
			}],
			"bundle": [{
				"input": [
					"node_modules/rxjs/bundles/rxjs.umd.js",
					"node_modules/rxcomp/dist/rxcomp.js",
					"node_modules/swiper/js/swiper.js",
					"node_modules/gsap/dist/EasePack.js",
					"node_modules/gsap/dist/gsap.js"
				],
				"output": "docs/js/vendors.js",
				"minify": true
			}, {
				"input": [
					"node_modules/swiper/css/swiper.css"
				],
				"output": "docs/css/vendors.css",
				"minify": true
			}]
		}
	},
	"tfs": false,
	"server": {
		"root": "./docs",
		"path": "/app/",
		"host": "localhost",
		"port": 41999
	}
}

{
	"targets": {
		"browser": {
			"compile": [{
				"input": "src/*.html",
				"output": "docs/",
				"minify": true
			}, {
				"input": "src/css/main.scss",
				"output": "docs/css/main.css",
				"minify": true
			}, {
				"input": "src/js/main.js",
				"output": {
					"file": "docs/js/main.js",
					"format": "umd"
				},
				"globals": {
					"gsap": "gsap",
					"rxjs": "rxjs",
					"rxjs/operators": "rxjs.operators",
					"rxcomp": "rxcomp",
					"rxcomp-form": "rxcomp-form"
				},
				"external": ["gsap", "rxjs", "rxjs/operators", "rxcomp", "rxcomp-form"],
				"minify": true
			}, {
				"input": "src/js/image/image.service.worker.js",
				"output": {
					"file": "docs/js/workers/image.service.worker.js",
					"format": "umd"
				},
				"minify": true
			}],
			"bundle": [{
				"input": [
					"node_modules/rxjs/bundles/rxjs.umd.js",
					"node_modules/rxcomp/dist/rxcomp.js",
					"node_modules/rxcomp-form/dist/rxcomp-form.js",
					"node_modules/swiper/js/swiper.js",
					"node_modules/gsap/dist/EasePack.js",
					"node_modules/gsap/dist/gsap.js"
				],
				"output": "docs/js/vendors.js",
				"minify": true
			}, {
				"input": [
					"node_modules/swiper/css/swiper.css"
				],
				"output": "docs/css/vendors.css",
				"minify": true
			}]
		}
	},
	"tfs": false,
	"server": {
		"root": "./docs",
		"path": "/tiemme-com/",
		"host": "localhost",
		"port": 41999,
		"log": false
	}
}
